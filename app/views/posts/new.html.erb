<h2>Create an Author</h2>
<%= form_tag authors_path, method: "post" do %>
  <% if @author.errors.any? %>
  <div id="error_explanation">
    <h2>There were some errors: </h2>
    <ul>
      <% @author.errors.full_messages.each do |message| %>
      <li><%= message %> </li>
      <% end %>
    </ul>
  </div>
  <% end %>

    <% if @author.errors[:title].empty? %>
      <div class="field">
    <% else %>
    <div class="field_with_errors">
      <% end %>
      <%= label_tag "title", "Title" %>
      <%= text_field_tag "title", @post.title%>
    </div>



    <% if @author.errors[:category].empty? %>
      <div class="field">
    <% else %>
      <div class="field_with_errors">
        <% end %>
      <%= label_tag "category", "Category" %>
      <p> Must be iether "Fiction" or "Non-Fiction".</p>
      <%= text_field_tag "category", @post.category %>
    </div>





      <% if @author.errors[:content].empty? %>
        <div class="field">
      <% else %>
        <div class="field_with_errors">
          <% end %>
          <%= label_tag "content", "Content" %>
          <%= text_field_tag "content", @post.content %>
      </div>

      <%= submit_tag "Create" %>
    <% end %>
